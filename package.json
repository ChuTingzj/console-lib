{
	"name": "monorepo",
	"version": "1.0.0",
	"private": "true",
	"description": "",
	"packageManager": "pnpm@7.27.0",
	"scripts": {
		"clear": "rm -rf ./packages/*/node_modules",
		"version": "pnpx changeset version",
		"publish": "pnpx changeset publish --registry=https://registry.npmjs.com/",
		"postinstall": "pnpx husky install",
		"preinstall": "pnpx only-allow pnpm",
		"build": "pnpm --filter=@console/* run build && pnpm clear",
		"release": "pnpm build && pnpx changeset && pnpm version && pnpm publish"
	},
	"keywords": [],
	"author": {
		"email": "zhangjing1024798@gmail.com",
		"name": "zhangjing"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@commitlint/cli": "^17.4.3",
		"@commitlint/config-conventional": "^17.4.3",
		"@types/node": "^18.13.0",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"prettier": "^2.8.4",
		"typescript": "^4.9.5"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"git add"
		]
	}
}
