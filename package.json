{
	"name": "monorepo",
	"description": "",
	"packageManager": "pnpm@7.27.1",
	"scripts": {
		"clear": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
		"commit": "git add . && pnpm cz",
		"postinstall": "pnpx husky install",
		"preinstall": "pnpx only-allow pnpm",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"build": "pnpm --filter=@console1024/* run build",
		"release": "pnpm changeset && pnpm changeset version && pnpm build && pnpm changeset publish --filter=@console1024/*"
	},
	"keywords": [],
	"author": {
		"email": "zhangjing1024798@gmail.com",
		"name": "zhangjing"
	},
	"license": "MIT",
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@commitlint/cli": "^17.4.3",
		"@commitlint/config-conventional": "^17.4.3",
		"@jest/globals": "^29.4.3",
		"@types/node": "^18.13.0",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.34.0",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"jest-config": "^29.4.3",
		"lint-staged": "^13.1.2",
		"prettier": "^2.8.4",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vitest": "^0.28.5"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"git add"
		]
	}
}
